{
  "name": "submission",
  "plural": "submissions",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "abstract": {
      "type": "string",
      "required": false
    },
    "file": {
      "type": "buffer"
    },
    "status": {
      "type": "number",
      "required": true,
      "default": "0"
    }
  },
  "validations": [],
  "relations": {
    "tags": {
      "type": "hasMany",
      "model": "tag",
      "foreignKey": "submissionId",
      "through": "submissiontag"
    },
    "authors": {
      "type": "hasMany",
      "model": "user",
      "through": "authorship",
      "keyThrough": "authorId",
      "foreignKey": "submissionId"
    },
    "reviewers": {
      "type": "hasMany",
      "model": "user",
      "foreignKey": "reviewId",
      "through": "review"
    },
    "conference": {
      "type": "belongsTo",
      "model": "conference",
      "foreignKey": "conferenceId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authorOwner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
